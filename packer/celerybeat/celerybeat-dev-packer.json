{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "commit": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-0565af6e282977273",
    "instance_type": "t2.medium",
    "ssh_username": "ubuntu",
    "ssh_timeout": "10m",
    "ami_name": "celerybeat-dev-{{user `commit`}}",
    "ami_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "volume_size": 50,
        "volume_type": "gp2",
        "delete_on_termination": true
      }
    ]
  }],
  "provisioners": [{
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "inline": [
        "sleep 30",
        "apt-add-repository ppa:ansible/ansible",
        "/usr/bin/apt-get update",
        "/usr/bin/apt-get upgrade",
        "/usr/bin/apt-get -y install openssl libssl-dev libssl-doc build-essential libffi-dev python-dev ansible",
        "curl https://bootstrap.pypa.io/get-pip.py -o get-pip.py",
        "python get-pip.py"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_dir": ".",
      "playbook_file": "packer/celerybeat/celerybeat-dev-packer.yml",
      "role_paths": [
        "roles/"
      ],
      "extra_arguments": ["--skip-tags \"nginx,supervisor\""]
    }
  ],
  "post-processors": [{
    "type": "manifest",
    "output": "manifest.json",
    "strip_path": true
  }]
}
